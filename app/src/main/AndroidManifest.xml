            android:name="com.mountains.link.HelpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mountains.link.PackType"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mountains.link.AdvancedPackActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mountains.link.TabPackActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mountains.link.LevelsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mountains.link.MoreScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mountains.link.TagsScreen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="com.mountains.link.GetHints"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/app_ad_id"/>

    </application>

</manifest>